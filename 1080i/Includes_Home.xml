<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="HomeVertical">
		<control type="group">
			<visible>![Window.IsVisible(favourites) | Window.IsVisible(script-globalsearch-main.xml) | Window.IsVisible(script-lazytv-main.xml) | Window.IsVisible(script-lazytv-BigScreenList.xml)]</visible>
			<top>120</top>
			<include>MainMenuVertical</include>
			<control type="group">
				<visible>system.getbool(lookandfeel.enablerssfeeds) + ![Window.IsVisible(favourites) | Window.IsVisible(script-globalsearch-main.xml) | Window.IsVisible(script-lazytv-main.xml) | Window.IsVisible(script-lazytv-BigScreenList.xml)]</visible>
				<animation effect="slide" end="2500,0" time="240">WindowClose</animation>
				<animation effect="slide" start="1920,0" end="0,0" delay="300" time="240" condition="!window.previous(startup)">WindowOpen</animation>
				<animation effect="slide" start="1920" end="0" time="240">VisibleChange</animation>
				<animation effect="slide" start="1920,0" end="0,0" delay="800" time="480" condition="window.previous(startup)">WindowOpen</animation>
				<top>869</top>
				<control type="group">
					<control type="image">
						<top>42</top>
						<left>474</left>
						<width>1446</width>
						<height>50</height>
						<texture>listselect_fo.png</texture>
						<colordiffuse>33000000</colordiffuse>
					</control>
					<control type="label">
						<left>1880</left>
						<top>44</top>
						<width>60</width>
						<height>41</height>
						<label></label>
						<font>IconSmall</font>
						<textcolor>$VAR[ColorHighlightVar]</textcolor>
					</control>
					<control type="rss">
						<description>RSS feed</description>
						<left>490</left>
						<top>44</top>
						<height>30</height>
						<width>1375</width>
						<font>font13</font>
						<urlset>1</urlset>
						<textcolor>$VAR[ColorHighlightVar]</textcolor>
						<titlecolor>$VAR[ColorHighlightVar]</titlecolor>
						<headlinecolor>$VAR[ColorTextVar]</headlinecolor>
					</control>
				</control>
			</control>
		</control>
		<control type="group" id="9003">
			<visible>!String.IsEmpty(Container(9000).ListItem.Property(widgetPath)) | String.IsEqual(Container(9000).ListItem.Property(widget),weather)</visible>
			<control type="group">
				<include>Animation.Common</include>
				<top>214</top>
				<include>skinshortcuts-template-widget-vertical</include>
			</control>
		</control>
	</include>
	<include name="HomeHorizontal">
		<control type="group">
			<visible>![Window.IsVisible(favourites) | Window.IsVisible(script-globalsearch-main.xml) | Window.IsVisible(script-lazytv-main.xml) | Window.IsVisible(script-lazytv-BigScreenList.xml)]</visible>
			<top>960</top>
			<animation effect="slide" tween="cubic" time="600" start="0,700" end="0,0" reversible="false">WindowOpen</animation>
			<animation effect="slide" tween="cubic" time="300" start="0,0" end="0,700" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="cubic" time="600" start="0,700" end="0,0" reversible="false">Visible</animation>
			<animation effect="slide" tween="cubic" time="300" start="0,0" end="0,700" reversible="false">Hidden</animation>
			<control type="image">
				<left>0</left>
				<width>FullScreenWidth</width>
				<height>120</height>
				<texture>listselect_fo.png</texture>
				<colordiffuse>55000000</colordiffuse>
				<visible>!Skin.HasTheme(Light)</visible>
			</control>
			<include>MainMenuHorizontal</include>	
		</control>
		<control type="group">
			<!--<animation effect="slide" tween="cubic" end="0,90" time="240">WindowClose</animation>
			<animation effect="slide" tween="cubic" start="0,90" end="0,0" delay="300" time="240" condition="!Window.Previous(startup)">WindowOpen</animation>
			<animation effect="slide" tween="cubic" start="0,90" end="0,0" delay="800" time="480" condition="Window.Previous(startup)">WindowOpen</animation>-->
			<animation effect="slide" start="1920" end="0" time="240">VisibleChange</animation>
			<visible>system.getbool(lookandfeel.enablerssfeeds)</visible>
			<top>920</top>
			<control type="group">
				<control type="label">
					<left>1890</left>
					<width>40</width>
					<height>40</height>
					<label></label>
					<font>IconTiny</font>
					<textcolor>$VAR[ColorHighlightVar]</textcolor>
				</control>
				<control type="rss">
					<description>RSS feed</description>
					<left>10</left>
					<height>30</height>
					<width>1870</width>
					<font>font12</font>
					<urlset>1</urlset>
					<textcolor>$VAR[ColorHighlightVar]</textcolor>
					<titlecolor>$VAR[ColorHighlightVar]</titlecolor>
					<headlinecolor>$VAR[ColorTextVar]</headlinecolor>
				</control>
			</control>
		</control>
		<control type="group" id="9003">
			<visible>!String.IsEmpty(Container(9000).ListItem.Property(widgetPath)) | String.IsEqual(Container(9000).ListItem.Property(widget),weather)</visible>
			<control type="group">
				<include>Animation.Common</include>
				<top>150</top>
				<include>skinshortcuts-template-widget-horizontal</include>
			</control>
		</control>
	</include>
</includes>