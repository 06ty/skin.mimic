<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">450</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<include>CommonBackground</include>
		<control type="image">
			<visible>Skin.HasSetting(Disable.HomeOverlay)</visible>
			<include>FullscreenDimensions</include>
			<texture>background.png</texture>
			<colordiffuse>background</colordiffuse>
		</control>
		<control type="group">
			<include>Window_OpenClose_Animation</include>
			<include condition="!Skin.HasSetting(Enable.FavView)">FavList</include>
			<include condition="Skin.HasSetting(Enable.FavView)">FavPanel</include>
			<control type="scrollbar" id="60">
				<left>1906</left>
				<top>45</top>
				<width>14</width>
				<height>1035</height>
				<onup>60</onup>
				<ondown>60</ondown>
				<onleft>450</onleft>
				<onright>450</onright>
				<orientation>vertical</orientation>
			</control>
		</control>
		<include>ScrollOffsetLabel</include>
		<control type="group">	
			<animation effect="slide" start="0,-90" end="0,0" delay="800" time="480">WindowOpen</animation>
			<animation effect="slide" end="0,-90" start="0,0" time="480">WindowClose</animation>
			<control type="image">
				<width>1920</width>
				<height>45</height>
				<texture>background.png</texture>
				<colordiffuse>topbar</colordiffuse>
			</control>
			<control type="label">
				<width>900</width>
				<height>90</height>
				<font>font13_title</font>
				<textoffsetx>15</textoffsetx>
				<textcolor>grey</textcolor>
				<align>left</align>
				<aligny>top</aligny>
				<textoffsety>-2</textoffsety>
				<label>$LOCALIZE[1036]</label>
			</control>
			<control type="label">
				<left>1020</left>
				<width>900</width>
				<height>90</height>
				<font>font13_title</font>
				<textoffsetx>15</textoffsetx>
				<textcolor>grey</textcolor>
				<align>right</align>
				<aligny>top</aligny>
				<textoffsety>-2</textoffsety>
				<label>$INFO[Container(450).NumItems,, $LOCALIZE[31025]]$INFO[Container(450).CurrentPage,[COLOR themecolor] | ,]$INFO[Container(450).NumPages,/,[/COLOR]]</label>
			</control>
			<control type="label">
				<left>0</left>
				<width>1920</width>
				<height>90</height>
				<font>font13_title</font>
				<textoffsetx>15</textoffsetx>
				<textcolor>grey</textcolor>
				<align>center</align>
				<aligny>top</aligny>
				<textoffsety>-2</textoffsety>
				<label>$INFO[System.Time]</label>
			</control>
		</control>
	</controls>
</window>