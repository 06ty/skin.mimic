<?xml version="1.0" encoding="UTF-8"?>
<window id="1129">
	<defaultcontrol always="true">509</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<include>CommonBackground</include>
		<include>Topbar</include>
		<include>ViewAnimation</include>
		<control type="panel" id="509">
			<left>120</left>
			<top>188</top>
			<width>1680</width>
			<height>720</height>
			<onleft>509</onleft>
			<onright>509</onright>
			<onup>509</onup>
			<ondown>509</ondown>
			<preloaditems>2</preloaditems>
			<scrolltime tween="quadratic" easing="out">300</scrolltime>
			<itemlayout height="360" width="420">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>420</width>
					<height>360</height>
					<texture>background.png</texture>
					<fadetime>400</fadetime>
					<colordiffuse>background</colordiffuse>
				</control>
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>420</width>
					<height>360</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<fadetime>400</fadetime>
					<colordiffuse>BAffffff</colordiffuse>
				</control>
				<control type="image">
					<top>310</top>
					<width>420</width>
					<height>50</height>
					<texture>black.png</texture>
					<colordiffuse>88ffffff</colordiffuse>
				</control>
				<control type="label">
					<top>310</top>
					<width>420</width>
					<height>40</height>
					<align>center</align>
					<textoffsetx>10</textoffsetx>
					<textcolor>grey</textcolor>
					<info>ListItem.Label</info>
				</control>
			</itemlayout>
			<focusedlayout height="360" width="420">
				<control type="group">
					<animation type="Focus" reversible="false">
						<effect type="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" />
						<effect type="fade" start="80" end="100" time="200" tween="sine" easing="in" />
					</animation>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>420</width>
						<height>360</height>
						<texture>background.png</texture>
						<fadetime>400</fadetime>
						<colordiffuse>background</colordiffuse>
					</control>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>420</width>
						<height>360</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<fadetime>400</fadetime>
						<bordertexture colordiffuse="themecolor" border="8">thumbs/thumbnail_focused.png</bordertexture>
						<bordersize>8</bordersize>
					</control>
					<control type="image">
						<left>6</left>
						<top>310</top>
						<width>408</width>
						<height>44</height>
						<texture>black.png</texture>
						<bordersize>2</bordersize>
						<colordiffuse>88ffffff</colordiffuse>
					</control>
					<control type="label">
						<top>310</top>
						<width>420</width>
						<height>40</height>
						<align>center</align>
						<textoffsetx>10</textoffsetx>
						<info>ListItem.Label</info>
					</control>
				</control>
			</focusedlayout>
			<content>
				<item id="1">
					<label>Alfred Hitchcock</label>
					<onclick>ActivateWindow(VideoLibrary,special://skin/extras/playlists/alfredhitchcock.xsp,return)</onclick>
					<icon>special://skin/backgrounds/playlists/hitchcock.jpg</icon>
				</item>
				<item id="2">
					<label>31049</label>
